# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 数据库配置
DATABASE_PATH=../database/accounting.db

# 查询配置
MAX_RESULTS=1000
QUERY_TIMEOUT=30
MAX_SQL_LENGTH=2000

# 缓存配置
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000
CACHE_TTL=3600

# 聊天配置
CHAT_MAX_HISTORY=10
CHAT_TEMPERATURE=0.7
CHAT_MAX_TOKENS=2000

# 安全配置
ALLOWED_SQL_KEYWORDS=SELECT,FROM,WHERE,GROUP BY,ORDER BY,JOIN,LEFT JOIN,INNER JOIN,COUNT,SUM,AVG,MAX,MIN,DISTINCT,HAVING,LIMIT,OFFSET,AS,ON,AND,OR,NOT,IN,BETWEEN,LIKE,IS NULL,IS NOT NULL
FORBIDDEN_SQL_KEYWORDS=DROP,DELETE,UPDATE,INSERT,ALTER,CREATE,TRUNCATE,GRANT,REVOKE